# AquaSuite API Environment Configuration
# Copy this file to .env and fill in the required values

# ===========================================
# DATABASE (REQUIRED)
# ===========================================
DATABASE_URL=postgresql://aquasuite:changeme@localhost:5432/aquasuite

# ===========================================
# SERVER (OPTIONAL)
# ===========================================
PORT=3001
HOST=127.0.0.1

# ===========================================
# LOCATION UUIDS (REQUIRED)
# These are the Homebase location UUIDs for each site
# ===========================================
LOCATION_UUID_CA=
LOCATION_UUID_NV=
LOCATION_UUID_NY=
LOCATION_UUID_TX=

# Default location key (optional) - e.g., NY for Westchester
DEFAULT_LOCATION_KEY=

# ===========================================
# SECURITY (REQUIRED IN PRODUCTION)
# ===========================================
# 32-byte hex string (64 characters) for TOTP secret encryption
# Generate with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=

# ===========================================
# INTEGRATIONS (OPTIONAL)
# ===========================================

# Homebase - Staff scheduling integration
HOMEBASE_API_KEY=
HOMEBASE_API_BASE=https://api.joinhomebase.com

# HubSpot - CRM integration (read-only contact sync)
HUBSPOT_ACCESS_TOKEN=
HUBSPOT_ENABLED=false

# Gmail - Intake form capture via OAuth
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=

# Gmail polling interval (default 90 seconds)
GMAIL_POLL_INTERVAL_MS=90000

# ===========================================
# FILE STORAGE (OPTIONAL)
# ===========================================
UPLOADS_DIR=/opt/aquasuite/uploads/rosters
REPORT_UPLOADS_DIR=/opt/aquasuite/uploads/reports

# ===========================================
# BUILD INFO (SET BY CI/CD)
# ===========================================
GIT_SHA=
